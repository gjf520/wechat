page {
	background: #f5f5f5;
}
.area {
	padding: 0 10px;
	height: 50px;
	background: #fff;
	border-bottom: 1px solid #d5d5d5;
	vertical-align: middle;
	font-size: 16px;
}
.area:first-child {
	border-top: 1px solid #d5d5d5;
}
.area-title {
	display: block;
	float: left;
	width: 100px;
	line-height: 50px;
	color: #9e9e9e;
}
.area-info {
	overflow:hidden;
	margin-left: 100px;
	height: 50px;
	line-height: 50px;
	color: #9e9e9e;
	white-space:nowrap;
	text-overflow:ellipsis; 
}
.placeholder {
	color: #9e9e9e;
}
.btn {
	margin: 10px 10px 0 10px;
	height: 40px;
	line-height: 40px;
	background: #ff9800;
	border-radius: 4px;
	text-align: center;
	color: #fff;
}

.wrapper {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	background: #f5f5f5;
	border-top: 1px solid #ccc;
}
.succ-title {
	width: 240px;
	margin: 0 auto;
	line-height: 50px;
	font-weight: bold;
	text-align: center;
	color: #00afc7;
}
.succ-icon {
	position: relative;
	top: 12px;
	margin-right: 10px;
}
.succ-item {
	margin: 5px 20px;
	line-height: 24px;
	font-size: 16px;
	color: #00afc7;
	text-align: center;
}