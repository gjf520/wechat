page{
	background: #f5f5f5;
}
.search-box {
	height: 30px;
	line-height: 30px;
	background: #00bcd4;
	padding: 5px 10px;
}
.search-input {
	height: 100%;
	background: #fff;
	margin-right: 50px;
	border-radius: 8px;
	padding: 0 10px;
	color: #212121;
	font-size: 16px;
}
.placeholder {
	color: #9e9e9e;
	font-size: 16px;
}
.search-button {
	position:absolute;
	right:15px;
	top: 8px;
	font-size:18px;
	padding:0;
	height:24px;
	line-height:24px;
	color:#fff;
}
.search-item {
	padding:10px;
	background:#fff;
	margin-bottom:10px;
	line-height:24px;
	font-size:16px;
	color:#616161;
}
.search-item-area {
	font-size: 14px;
	color: #ff9800;
}